<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notification_inshallah"> <!-- Ensure this matches your app package name -->

    <!-- Permissions -->
    <!-- Required for Android 13+ to post notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Required if you want notifications after the device restarts -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:label="notification_inshallah"
        android:icon="@mipmap/ic_launcher">

        <!-- Main activity setup -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Foreground service declaration for notifications -->
        <service android:name="com.dexterous.flutterlocalnotifications.FlutterLocalNotificationsPlugin" android:permission="android.permission.FOREGROUND_SERVICE"/>
    </application>
</manifest>
